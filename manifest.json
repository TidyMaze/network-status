{
  "manifest_version": 2,

  "name": "Network status indicator",
  "description": "This extension allows the user to watch the network status.",
  "version": "0.3.2",

  "browser_action": {
    "default_icon": "images/connected.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["optionsService.js", "eventPage.js"]
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*/"
  ],
  "options_page": "options.html"
}